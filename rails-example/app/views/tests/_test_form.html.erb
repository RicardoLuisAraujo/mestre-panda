<%= simple_form_for [exercise, @user_answer], :html=> { class: 'col-xs-12 col-sm-12 col-lg-3 mx-auto text-center list-group' } do |f| %>
      <%= f.simple_fields_for :answer, exercise.answers do |answer_form| %>
            <%= f.input_field :answer, 
                label: 'Answer',
                as: :radio_buttons,
                class: 'form-check-input',
                :item_label_class => 'list-group-item',
                collection: exercise.answers, label_method: :answer %>
                <br>
            <%end%>
        <%= f.submit 'Submit Answer!', class: "btn btn-outline-success " %>
<% end %>
